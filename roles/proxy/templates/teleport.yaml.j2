teleport:
  nodename: {{ ansible_hostname }}
  data_dir: /var/lib/teleport
  log:
    output: stderr
    severity: INFO
    format:
      output: text
  ca_pin: ""
auth_service:
  enabled: "yes"
  listen_addr: {{ teleport_auth_server }}:3025
  proxy_checks_host_keys: no
  session_recording: "proxy"
  tokens:
  - "node:{{ teleport_auth_secure_token }}"
  authentication:
    type: local
    second_factor: {{ teleport_second_auth }}
ssh_service:
  enabled: "yes"
  labels:
    env: dev
  commands:
  - name: hostname
    command: [hostname]
    period: 1m0s
{% if teleport_enhanced_recording_enable == true %}
  enhanced_recording:
    enabled: true
{% endif %}
proxy_service:
  enabled: "yes"
  listen_addr: {{ teleport_auth_server }}:3023
  https_keypairs: []
  acme: {}
